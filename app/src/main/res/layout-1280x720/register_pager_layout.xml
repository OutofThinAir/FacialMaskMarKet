<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_pager_last"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@mipmap/last_pic"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="注册"
            android:textSize="20sp"
            android:gravity="center"/>


    </LinearLayout>




    <RelativeLayout
        android:id="@+id/line2"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
      android:layout_below="@id/line1"

        >

        <EditText
            android:id="@+id/register_pager_into_uanme"
            android:layout_width="290dp"
            android:layout_height="match_parent"
           android:layout_centerInParent="true"
            android:background="@drawable/rv_item_border"
            android:layout_marginLeft="5dp"
            android:hint="请输入用户名"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/line3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/line2">

        <EditText
            android:id="@+id/register_pager_into_upwd"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:background="@drawable/rv_item_border"
            android:layout_marginLeft="5dp"
            android:layout_centerInParent="true"
            android:hint="请输入密码"
            />
    </RelativeLayout>

     <Button
         android:id="@+id/register_pager_login_bu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="注册"
        android:layout_marginTop="20dp"
         android:textSize="25sp"
         android:layout_below="@id/line3"
         android:layout_centerHorizontal="true"/>



</RelativeLayout>