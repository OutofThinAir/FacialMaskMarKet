<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/register_pager_last"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/last_pic"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="注册"
            android:textSize="30sp"
            android:gravity="center"/>


    </LinearLayout>




    <LinearLayout
        android:id="@+id/line2"
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
      android:layout_below="@id/line1"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名:"
            android:textSize="30sp"
            />
        <EditText
            android:id="@+id/register_pager_into_uanme"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rv_item_border"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/line3"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_below="@id/line2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码:"
            android:textSize="30sp"/>
        <EditText
            android:id="@+id/register_pager_into_upwd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rv_item_border"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

     <Button
         android:id="@+id/register_pager_login_bu"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="注册"
        android:layout_marginTop="20dp"
         android:textSize="25sp"
         android:layout_below="@id/line3"
         android:layout_centerHorizontal="true"/>


    <TextView
        android:id="@+id/register_pager_qt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他登录方式"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textSize="15sp"
        android:textColor="#DD5044"
        android:layout_below="@id/login_pager_login_bu"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>