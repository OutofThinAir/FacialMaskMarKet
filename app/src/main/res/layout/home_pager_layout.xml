<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >

        <ImageView
            android:id="@+id/home_pager_towma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/home_pager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VIP"
            android:textSize="25sp"
            android:textColor="#E21918"
            android:layout_centerInParent="true"/>

        <ImageButton
            android:id="@+id/home_pager_xiaoxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/next_pic"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
           android:layout_centerVertical="true"/>

    </RelativeLayout>
    <com.youth.banner.Banner
        android:id="@+id/home_pager_banner"
        android:layout_width="match_parent"
        android:layout_height="170dp"></com.youth.banner.Banner>

</LinearLayout>